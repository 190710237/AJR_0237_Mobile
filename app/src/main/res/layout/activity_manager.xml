<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".ManagerActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome, Manager"
        android:textAppearance="?attr/textAppearanceHeadline4"
        android:fontFamily="@font/inter_black"
        android:textColor="@color/headline_blue"/>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/etBulan"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="MM"
            app:startIconDrawable="@drawable/ic_baseline_calendar_today_24"
            app:startIconContentDescription="Bulan">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/etTahun"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:hint="YYYY"
            app:startIconDrawable="@drawable/ic_baseline_calendar_today_24"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLaporanTransaksi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/dm_sans_medium"
            app:backgroundTint="@color/primary_blue"
            android:text="Laporan Transaksi" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLaporanCustomer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/dm_sans_medium"
            app:backgroundTint="@color/primary_blue"
            android:text="Laporan Top 5 Customer"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLaporanDriver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/dm_sans_medium"
            app:backgroundTint="@color/primary_blue"
            android:text="Laporan Top 5 Driver"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLaporanPerforma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/dm_sans_medium"
            app:backgroundTint="@color/primary_blue"
            android:text="Laporan Performa Driver"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLaporanMobil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/dm_sans_medium"
            app:backgroundTint="@color/primary_blue"
            android:text="Laporan Mobil"
            />

    </LinearLayout>
    <!--    <include-->
    <!--        android:id="@+id/layout_loading"-->
    <!--        layout="@layout/layout_loading"-->
    <!--        android:visibility="gone" />-->
</LinearLayout>